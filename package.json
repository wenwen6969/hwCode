{
	"name": "three-study",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --force --host",
		"build": "vue-tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint src --fix --ext .ts,.tsx,.vue,.js,.jsx",
		"prettier": "prettier --write .",
    "prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,vue,js,jsx}": "eslint --cache --fix"
	}
}
